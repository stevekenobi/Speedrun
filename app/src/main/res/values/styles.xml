<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/Speedrun.TextAppearance.TextView.Black</item>
    </style>

    <style name="InactiveMenu">
        <item name="itemTextColor">@android:color/white</item>
    </style>

    <style name="Speedrun.TextAppearance.TextView.Regular" parent="android:TextAppearance.Widget.TextView">
        <item name="fontPath">font/roboto_slab_regular</item>
    </style>

    <style name="Speedrun.TextAppearance.TextView.Black" parent="android:TextAppearance.Widget.TextView">
        <item name="fontPath">font/roboto_slab_black</item>
    </style>

    <style name="Speedrun.TextAppearance.TextView.Light" parent="android:TextAppearance.Widget.TextView">
        <item name="fontPath">font/roboto_slab_light</item>
    </style>

    <style name="Speedrun.TextAppearance.TextView.Bold" parent="android:TextAppearance.Widget.TextView">
        <item name="fontPath">font/roboto_slab_bold</item>
    </style>

    <style name="Speedrun.TextAppearance.TextView.Medium" parent="android:TextAppearance.Widget.TextView">
        <item name="fontPath">font/roboto_slab_medium</item>
    </style>

    <style name="Speedrun.TextAppearance.TextView.Thin" parent="android:TextAppearance.Widget.TextView">
        <item name="fontPath">font/roboto_slab_thin</item>
    </style>

</resources>
