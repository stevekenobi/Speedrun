<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/Speedrun.TextAppearance.TextView.Light</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="InactiveMenu">
        <item name="itemTextColor">@android:color/white</item>
    </style>

    <style name="Speedrun.TextAppearance.TextView.Regular" parent="android:TextAppearance.Widget.TextView">
        <item name="fontPath">fonts/PDFIntextCondproRegular.ttf</item>
    </style>

    <style name="Speedrun.TextAppearance.TextView.Italic" parent="android:TextAppearance.Widget.TextView">
        <item name="fontPath">fonts/PDFIntextCondproItalic.ttf</item>
    </style>

    <style name="Speedrun.TextAppearance.TextView.Light" parent="android:TextAppearance.Widget.TextView">
        <item name="fontPath">fonts/PDFIntextCondproLight.ttf</item>
    </style>

    <style name="Speedrun.TextAppearance.TextView.Bold" parent="android:TextAppearance.Widget.TextView">
        <item name="fontPath">fonts/PDFIntextCondproBold.ttf</item>
    </style>

    <style name="Speedrun.TextAppearance.TextView.Medium" parent="android:TextAppearance.Widget.TextView">
        <item name="fontPath">fonts/PDFIntextCondproMedium.ttf</item>
    </style>

    <style name="Speedrun.TextAppearance.TextView.Medium.Italic" parent="android:TextAppearance.Widget.TextView">
        <item name="fontPath">fonts/PDFIntextCondproMediumItalic.ttf</item>
    </style>

</resources>
