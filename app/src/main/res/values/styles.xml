<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/Speedrun.TextAppearance.TextView.Light</item>
    </style>

    <style name="InactiveMenu">
        <item name="itemTextColor">@android:color/white</item>
    </style>

    <style name="Speedrun.TextAppearance.TextView.Regular" parent="android:TextAppearance.Widget.TextView">
        <item name="fontPath">fonts/RobotoSlabRegular.ttf</item>
    </style>

    <style name="Speedrun.TextAppearance.TextView.Black" parent="android:TextAppearance.Widget.TextView">
        <item name="fontPath">fonts/RobotoSlabBlack.ttf</item>
    </style>

    <style name="Speedrun.TextAppearance.TextView.Light" parent="android:TextAppearance.Widget.TextView">
        <item name="fontPath">fonts/RobotoSlabLight.ttf</item>
    </style>

    <style name="Speedrun.TextAppearance.TextView.Bold" parent="android:TextAppearance.Widget.TextView">
        <item name="fontPath">fonts/RobotoSlabBold.ttf</item>
    </style>

    <style name="Speedrun.TextAppearance.TextView.Medium" parent="android:TextAppearance.Widget.TextView">
        <item name="fontPath">fonts/RobotoSlabMedium.ttf</item>
    </style>

    <style name="Speedrun.TextAppearance.TextView.Thin" parent="android:TextAppearance.Widget.TextView">
        <item name="fontPath">fonts/RobotoSlabThin.ttf</item>
    </style>

</resources>
